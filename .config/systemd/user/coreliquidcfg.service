[Unit]
Description=MSI AIO startup service

[Service]
Type=simple
ExecStart=/usr/local/lib/venvs/liquidctl/bin/python /usr/local/lib/venvs/liquidctl/bin/yoda \
    --interval 1 --use-device-controller \
    control fans with smart on coretemp.package_id_0\
    and "waterblock fan" with smart on coretemp.package_id_0\
    and pump with smart on coretemp.package_id_0

[Install]
WantedBy=default.target
